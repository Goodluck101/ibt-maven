pipeline{

agent any
//triggers{ cron('H/2 * * * *') }
environment{
version  = '3.4.5'
}
stages{
    stage('hello'){
        steps{
            echo "hello"
        }
    }//end of stage1
    stage('helle'){

            steps{
                echo "hello"
                git branch: 'jan2024franklinv1', credentialsId: 'franklin_github_credentials', url: 'https://github.com/IBT-learning/ibt-maven'
            }
        }// end of stage 2
        stage('download from github'){
                    steps{

                        git branch: 'jan2024franklinv1', credentialsId: 'franklin_github_credentials', url: 'https://github.com/IBT-learning/ibt-maven'
                    }
                }// end of stage 3
        stage('Example') {
                    input {
                        message "Should we continue?"
                        ok "Yes, we should."
                        submitter "alice,bob"
                        parameters {
                            string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                        }
                    }
                    steps {
                        echo "Hello, ${PERSON}, nice to meet you."
                    }
         }//end of stage4
         stage('checking'){

                    when {
                    branch 'jan2025franklinv1'
            }
                         steps{
                            echo "hello"
                            }
                         }// end of stage 3
         stage('use variable'){
                             steps{

                                 echo '$version'
                                echo "${env.version}"
                             }
                         }// end of stage 3
}// end of stages
}// end of pipeline