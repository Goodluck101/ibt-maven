pipeline {
    agent any

    parameters {
    string(name: 'Branch_name', defaultValue: 'main', description: 'Enter branch to build')
    choice(name: 'CHOICE', choices: ['one', 'two', 'three'], description: 'pick something')
   }


environment {
    version = '1.1.1'

}

    stages {
        stage('Hello') {
            steps {
                echo 'Hello IBT'
            }
            }
            stage('Hi') {
            steps {
                echo 'Hello Emmanuel'
            }
            }
            stage('Github download') {
            steps{
                git branch: '$Branch_name', credentialsId: 'emmanuel_github_credentials', url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
            } //stage3
            stage ('List Repo contents') {
                steps{
                    sh 'ls -lrt'
              } //step
          } //stage4
          stage ('print commands') {
              steps {
                  echo '$CHOICE'
                  echo 'Choice: $(params.CHOICE)'
              }
          } //stage5
          stage ('Example Deploy') {
            when {
              branch 'main'
            }
               steps{
                   echo 'Deploying...'
               }
            }
            stage('using vars'){
                steps{
                    echo '$version'
                    echo "${env.version}"
                    script {
                        print env.version
                    }
                }
           }
            stage('script block'){
                steps{
                      script {
                          def browser = ['chrome', 'firefox']
                          for (int i=0; i < browser.size(); ++i) {
                              echo "Testing the ${browsers[i]} browser"
                         }
                     }
                }
            }
          } // end of stages
       } // end of pipeline