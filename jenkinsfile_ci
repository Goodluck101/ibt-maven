pipeline{
    agent any

    tools{
        maven 'maven_3.8'
    }

    stages{
        stage('GIT checkout'){
            steps{
                git branch: 'feature-teewana3', credentialsId: 'taiwo_github(cred)', url: 'https://github.com/IBT-learning/ibt-maven.git'
        
            }

        

        
        }

        stage('validate'){
            steps{
                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn --version'

                    sh 'mvn validate'
    
                    
                }
            }
        }

        stage('Compile'){
            steps{
                sh 'mvn --version'
                sh 'mvn compile'
            }
        }

        stage('Package'){
                             steps{
                                 sh 'mvn --version'
                                 sh 'mvn package'
                             }
                         }

        stage('upload to Artifactory'){
            steps{

                     withCredentials([file(credentialsId: 'taiwo_B3', variable: 'maven_settings_taiwo')]) {

                        sh 'mvn deploy -s $maven_settings_taiwo'
    
                        }
                                    
                }
            }
        }
}
