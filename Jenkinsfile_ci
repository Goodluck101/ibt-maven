pipeline{
    agent any

    stages{
        stage('Git checkout'){
            steps{
                git branch: 'feature_gunjanvm', changelog: false, credentialsId: 'ibt', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('Validate'){
            steps{
                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn validate'
                }
            }
        }

    }
}