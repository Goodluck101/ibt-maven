pipeline{
    agent any

    stages {
        stage('Github checkout'){
            steps{
                git branch: 'April2024_Isaac', changelog: false, credentialsId: 'ibt', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('validate'){
            steps{
                withMaven(maven: 'maven_3.8') {
                    bat '''
                         mvn --version
                         mvn validate
                         '''
                }
            }
        }
    } //stages
} //pipeline