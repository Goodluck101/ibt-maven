pipeline{
  agent any

  stages{
    stage('git checkout'){
      steps{
      git branch: 'feature_benny', credentialsId: 'benny_crnd', url: 'https://github.com/IBT-learning/ibt-maven.git'
         }
       } //stage1

    stage('validate'){
          steps{
              withMaven(maven: 'Maven_3.8') {
                 bash 'mvn validate'
               }
             }
           } //stage2

  } //stages
} //pipeline