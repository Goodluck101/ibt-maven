pipeline {
    agent any
    stages {
        stage('Git checkout'){
           steps{
                git branch: 'feature-rudwan', credentialsId: 'GitHub_Cred_Rudwan', url: 'https://github.com/IBT-learning/ibt-maven.git'

            }
        }
        stage('validate'){
                   steps{
                        withMaven(maven: 'maven_3.9.3') {
                            sh 'mvn validate'
                        }

                    }
                }

    }
}