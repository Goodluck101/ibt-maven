pipeline{
    agent any

    tools{
        maven 'maven_3.8'
    }
    stages{
        stage('Git checkout'){
            steps{
                git branch: 'feature_joseph', changelog: false, credentialsId: 'Joseph', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('Validate'){
            steps{
              withMaven(maven: 'maven_3.9.3') {
              sh 'mvn --version'
              sh 'mvn validate'
              }
            }
        }
    }
        stage('Compile'){
            steps{
                sh 'mvn --version'
                sh 'mvn compile'

            }
        }
        stage('Test'){
             steps{
                sh 'mvn --version'
                sh 'mvn test'

            }
        }

        stage('Package'){
             steps{
                sh 'mvn --version'
                sh 'mvn package'
            }
        }
        stage('upload to Artifactory'){
            steps{
                withCredentials([file(credentialsId: 'creating_settings_file_Joseph_maven', variable: 'maven_settings_joseph')]) {
                    sh 'mvn deploy -s $maven_settings_joseph'
                }
            }
        }
    }


}