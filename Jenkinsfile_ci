pipeline{
    agent any

    tools{
          maven 'maven_3.8'
     }
    stages{
        stage('Git Checkout'){
            steps{
                git branch: 'feature_wale_alake', changelog: false, credentialsId: 'GitHub_cred_walealake', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
            }
        }
        stage('Validate'){
            steps{
                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn --version'
                    sh 'mvn validate'
                }
             }
        }
        stage('Compile'){
                    steps{
                        sh 'mvn --version'
                        sh 'mvn compile'
                    }
         }
    }
}