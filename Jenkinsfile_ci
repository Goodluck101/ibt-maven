pipeline{
  agent any

    tools{
        maven 'maven_3.8'
    }

  stages{
      stage('git checkout'){
          steps{
               git branch: 'feature_nasir1', changelog: false, credentialsId: 'GitHub_cred_nasir', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
         }
     }
     stage('Validate'){
        steps{
            withMaven(maven: 'maven_3.9.3') {
                bat 'mvn --version'
                bat 'mvn validate'
            }
        }
     }
     stage('compile'){
        steps{
        bat 'mvn --version'
        bat 'mvn compile'
        }
     }
      stage('test'){
             steps{
             bat 'mvn --version'
             bat 'mvn test'
             }
          }

  }
}