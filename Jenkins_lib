@Library('jenkins-library')_
pipeline{
    agent any

    stages {
    stage('Git checkout') {
                steps {
                   git branch: 'feature_oakisanya', changelog: false, credentialsId: 'GitHub_cred_oakisanyao', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
                }
            }
     stage('Validate')
     {
        steps{
            bat "mvn validate"
        }
     }
     stage('Compile')
          {
             steps{
                 sh "mvn compile"
             }
          }
     stage('SonarScan')
     {
        steps{
               sonarScan()
        }
     }
 }
}