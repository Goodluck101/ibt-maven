@Library('jenkins-library')_
pipeline{
    agent any

    stages {
    stage('Git checkout') {
                steps {
                    checkout changelog: false, poll: false, scm: [$class: 'GitSCM', branches: [[name: '*/feature_oakisanya']], extensions: [], userRemoteConfigs: [[credentialsId: 'GitHub_cred_oakisanyao', url: 'https://github.com/IBT-learning/ibt-maven.git']]]
                }
            }
     stage('Validate')
     {
        steps{
            bat "mvn validate"
        }
     }
     stage('Compile')
          {
             steps{
                 sh "mvn compile"
             }
          }
     stage('SonarScan')
     {
        steps{
               sonarScan()
        }
     }
 }
}