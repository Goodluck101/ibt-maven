pipeline{
    agent any

    tools{
        maven 'maven_3.8'
    }

    stages{
        stage('Git checkout'){
            steps{
                git branch: 'josephine2', changelog: false, credentialsId: 'ibt', poll: false, url: 'https://github.com/IBT-learning/ibt-maven.git'
               }
            }
        stage('Validate'){
            steps{
                withMaven(maven: 'maven_3.9.3') {
                sh 'mvn --version'
                sh 'mvn validate'
                }
            }

        }

    }
}