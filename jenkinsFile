pipeline {
 agent any

 parameters {
    string(name: 'Branch_name', defaultValue: 'main', description: 'Enter branch to build')
    choice(name: 'Choice', choices: ['One', 'Two', 'Three'], description: 'Pick something')
 }


environment {
    version = '1.1.1'
}

 stages {
    stage('hello') {
        steps {
            echo "hello world"
        } //step
    } //stage1
    stage('hi') {
        steps {
            echo "hi this is fao"
        } //step
    } //stage2
    stage('Github download') {
        steps{
            git branch: '$Branch_name', credentialsId: 'faomet_credentials', url: 'https://github.com/IBT-learning/ibt-maven.git'
        }
    } //stage3
    stage ('Print commands') {
    when {
        expression {
            '${params.CHOICE}'=='Two'
        }
    }
        steps {
            echo '$Choice'
            echo "Choice: ${params.Choice}"
        }
    } //stage 5
    stage ('Example Deploy'){
      when {
        branch 'jan2024_fao'
      }
        steps{
            echo "Deploying... "
        }
    }
 }
} // end of pipeline