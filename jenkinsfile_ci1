pipeline{
    agent any

    tools{
        maven 'maven_3.9.3'
    }


    stages{
        stage('Git checkout'){
            steps{
                git branch: 'feature-taiwo3', credentialsId: 'taiwo_github(cred)', url: 'https://github.com/IBT-learning/ibt-maven.git'

            }
        }
        stage('validate'){
            steps{

                withMaven(maven: 'maven_3.9.3') {
                    sh 'mvn --version'
                    sh 'mvn validate'
    
                }
                
            }
        }
        stage('compile'){
            steps{
                sh 'mvn --version'
                sh 'mvn compile'
            }
        }
        stage('test'){
            steps{
                sh 'mvn --version'
                sh 'mvn test'
            }
        }
        stage('package'){
            steps{
                sh 'mvn --version'
                sh 'mvn package'
            }
        }
        stage('upload to artifactory'){
            steps{
                withCredentials([file(credentialsId: 'taiwo_maven', variable: 'mvn_settings_taiwo')]) {
                       sh 'mvn deploy -s $mvn_settings_taiwo'

    
                    }
            }
        }



    

        
    }
}